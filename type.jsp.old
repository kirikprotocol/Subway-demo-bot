<%@page language="java" contentType="text/xml; charset=utf-8"%><?xml version="1.0" encoding="utf-8"?>
<%
  String type=request.getParameter("type");
  session.setAttribute("type", type);
  String message = "";
  if(type.equals("sub")){
    message = "  <div>\n" +
            "    Which type of bread: Italian, Wheat, Parmesan Oregano or Honey Oat?\n" +
            "  </div>\n" +
            "  <navigation>\n" +
            "    <link accesskey=\"1\" pageId=\"bread.jsp?bread=Italian\">Italian</link>\n" +
            "    <link accesskey=\"2\" pageId=\"bread.jsp?bread=Wheat\">Wheat</link>\n" +
            "    <link accesskey=\"3\" pageId=\"bread.jsp?bread=Parmesan Oregano\">Parmesan Oregano</link>\n" +
            "    <link accesskey=\"4\" pageId=\"bread.jsp?bread=Honey Oat\">Honey Oat</link>\n" +
            "  </navigation>\n" +
            "  <div>\n" +
            "    <input navigationId=\"submit\" name=\"bread\" title=\"\"/>\n" +
            "  </div>\n" +
            "  <navigation id=\"submit\">\n" +
            "    <link accesskey=\"1\" pageId=\"bread.jsp\">Ok</link>\n" +
            "  </navigation>\n";
  }
  else if(type.equals("wrap") | type.equals("salad")){
    message = "  <div>\n" +
            "    Which extras? Meat, Cheese or Strips of crispy bacon?\n" +
            "  </div>\n" +
            "  <navigation>\n" +
            "    <link accesskey=\"1\" pageId=\"extras.jsp?extras=Meat\">Meat</link>\n" +
            "    <link accesskey=\"2\" pageId=\"extras.jsp?extras=Wheat\">Cheese</link>\n" +
            "    <link accesskey=\"3\" pageId=\"extras.jsp?extras=Strips of crispy bacon\">Strips of crispy bacon</link>\n" +
            "  </navigation>\n" +
            "  <div>\n" +
            "    <input navigationId=\"submit\" name=\"extras\" title=\"\"/>\n" +
            "  </div>\n" +
            "  <navigation id=\"submit\">\n" +
            "    <link accesskey=\"1\" pageId=\"extras.jsp\">Ok</link>\n" +
            "  </navigation>\n";
  }
%>
<page version="2.0">
  <%=message%>
  <navigation>
    <link accesskey="0" pageId="index.jsp">Main menu</link>
  </navigation>
</page>